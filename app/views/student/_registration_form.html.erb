<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

<div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="signInModalLabel" aria-hidden="true">
			<div class="modal-dialog loginModal">
				<div class="modal-content loginContent">
					<div class="modal-header">
						<h1 class="modal-title loginHeader">
							<span class="glyphicon glyphicon-pencil" ></span>Register
						</h1>
					</div>
					<div class="modal-body loginBody">
						<div class="container-fluid loginContainer">
							<div class="row">
								<div class="input-group input-group-lg inputBox">
									<span class="input-group-addon glyphicon glyphicon-user"></span>
									
									<%= f.text_field :name,:class => "form-control tbox", :placeholder => "Name", :required => "required", :autofocus => true   %>
								</div>
								<div class="input-group input-group-lg inputBox">
									<span class="input-group-addon glyphicon glyphicon-user"></span>
									
									<%= f.text_field :username, :class => "form-control tbox", :placeholder=>"Username", :required => "required" %>
								</div>
								<div class="input-group input-group-lg inputBox">
									<span class="input-group-addon glyphicon glyphicon-envelope"></span>
									
									<%= f.email_field :email, :class => "form-control tbox", :placeholder => "Email", :required=> "required"%>
								</div>
								<div class="input-group input-group-lg inputBox">
									<span class="input-group-addon glyphicon glyphicon-asterisk"></span>
									
									<%= f.password_field :password,:class => "form-control tbox", :placeholder => "Password", :required => "required"%>
								</div>
								<div class="input-group input-group-lg inputBox">
									<span class="input-group-addon glyphicon glyphicon-asterisk"></span>
									
									<%= f.password_field :password_confirmation,:class => "form-control tbox", :placeholder => "Confirm Password", :required => "required"%>
								</div>  
								<br>
								<%= button_tag "<h4> Register </h4>".html_safe, :class =>"btn btn-block buttonSignIn", :type => "submit" %>
								
								<div class="register">
									<h3>Already have an account?</h3>
									<button type="button" class="btn btn-block buttonForgotPassword" data-dismiss="modal" data-toggle="modal" data-target="#signInModal">
										<h4>Sign In</h4>
									</button>
								</div>
							</div>
						</div>
					</div>
					<div class="modal-footer">
						<h5 class="pull-left"style="color:white">OR SIGN UP WITH</h5>
						<a href="" class="btn btn-social-icon btn-facebook">
							<i class="fa fa-facebook"></i>
						</a>
						<a class="btn btn-social-icon btn-google-plus">
							<i class="fa fa-google-plus"></i>
						</a>
					</div>
				</div>
			</div>
		</div>
		<% end %>