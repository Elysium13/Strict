<div class="modal-dialog loginModal">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  
				<div class="modal-content loginContent">
					<div class="modal-header">
						<h1 class="modal-title loginHeader">
							<span class="glyphicon glyphicon-lock"></span>Sign-In
						</h1>
					</div>
					<div class="modal-body loginBody">
						<div class="container-fluid loginContainer">
						<% if !flash.nil? %>
        					<% flash.each do |name, msg| %>
            				<% if msg.is_a?(String) %>
                			<div class="alert  alert-<%= name == :notice ? "success" : "error" %> alert-block">
                  				<button type="button" class="close" data-dismiss="alert">Ã—</button>
                  				<%= content_tag :div, msg, :id => "flash_#{name}" %>
                			</div>
            			<% end %>
        			<% end %>
    				<% end %>
							<div class="row">
								<div class="input-group input-group-lg inputBox">
									<span class="input-group-addon glyphicon glyphicon-user"></span>
									<%= f.text_field :login, :autofocus => true, :class => "form-control tbox", :placeholder => "Email", :required => "required" %></div>
								
								<div class="input-group input-group-lg inputBox">
									<span class="input-group-addon glyphicon glyphicon-asterisk"></span>
									
  								<%= f.password_field :password, :class => "form-control tbox", :placeholder => "password", :required => "required" %>
								</div>  
								<br>
								<br>
								<div class="row">
									<div class="col-xs-12 col-sm-6">
										
										<%= button_tag "<h4> Sign In </h4>".html_safe, :class =>"btn btn-block buttonSignIn", :type => "submit" %>
											
										
									</div>
									<div class="col-xs-12 col-sm-6">
										<button type="button" class="btn btn-block buttonForgotPassword" data-dismiss="modal" data-toggle="modal" data-target="#forgotModal">
											<h4>FORGOT PASSWORD</h4>
										</button>
									</div>
								</div>
								<br>
								<div class="register">
									<h3>New to Strictly Scholarship?</h3>
									<button type="button" class="btn btn-block buttonForgotPassword" data-dismiss="modal" data-toggle="modal" data-target="#registerModal">
										<h4>REGISTER</h4>
									</button>
								</div>
							</div>
						</div>
					</div>
					<div class="modal-footer">
						<h5 class="pull-left"style="color:white">OR SIGN IN WITH</h5>
						<a href="" class="btn btn-social-icon btn-facebook">
							<i class="fa fa-facebook"></i>
						</a>
						<a class="btn btn-social-icon btn-google-plus">
							<i class="fa fa-google-plus"></i>
						</a>
					</div>
				</div>
			</div>
			<% end %>